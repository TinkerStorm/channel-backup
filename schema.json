{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/channel-backup-config.schema.json",
  "title": "Channel Backup Configuration",
  "description": "Channel Backup Configuration",
  "type": "object",
  "properties": {
    "webhook": {
      "required": true,
      "description": "Webhook URL",
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://discord.com/api/webhooks/[0-9]+/[0-9a-zA-Z-_]+$"
        },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[0-9]+$"
            },
            "token": {
              "type": "string",
              "pattern": "^[0-9a-zA-Z-]+$"
            }
          },
          "required": [ "id", "token" ],
          "additionalProperties": false
        }
      ]
    },
    "files": {
      "type": "array",
      "items": {
        "type": "string"        
      }
    }
  }
}