{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/TinkerStorm/channel-backup/raw/main/schemas/config.json",
  "title": "Discord Message Structure",
  "description": "A Discord message.",
  "type": "object",
  "anyOf": [
    {"required": ["content"]},
    {"required": ["embeds"]}
  ],
  "properties": {
    "content": {
      "type": "string",
      "description": "The content of the message.",
      "maxLength": 2000
    },
    "embeds": {
      "type": "array",
      "description": "Embeds in the message.",
      "items": {
        "$ref": "#/definitions/embed"
      }
    },
    "tts": {
      "type": "boolean",
      "description": "Whether the message is a TTS message."
    },
    "avatarURL": {
      "type": "string",
      "description": "The avatar URL of the message author."
    },
    "username": {
      "type": "string",
      "description": "The username of the message author."
    }
  },
  "definitions": {
    "embed": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the embed."
        },
        "description": {
          "type": "string",
          "description": "The description of the embed."
        },
        "url": {
          "type": "string",
          "description": "The URL of the embed."
        },
        "timestamp": {
          "type": "number",
          "description": "The timestamp of the embed."
        },
        "color": {
          "type": "number",
          "description": "The color of the embed."
        },
        "footer": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text of the footer."
            },
            "iconURL": {
              "type": "string",
              "description": "The icon URL of the footer."
            }
          }
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "The URL of the image."
            }
          }
        },
        "thumbnail": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "The URL of the thumbnail."
            }
          }
        },
        "fields": {
          "type": "array",
          "description": "The fields of the embed.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the field."
              },
              "value": {
                "type": "string",
                "description": "The value of the field."
              },
              "inline": {
                "type": "boolean",
                "description": "Whether the field is inline."
              }
            },
            "required": [
              "name",
              "value"
            ]
          }
        }
      }
    }
  }
}